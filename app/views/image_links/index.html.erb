<%= link_to "Create a New Image Link", new_image_link_path, class: 'button-small' %> 

<% @image_links.each do |image_link| %>
  <%= content_tag :h1, image_link.title %>
  <%= image_tag image_link.url,  :width => "250" %><br>
  <%= link_to "Show", image_link_path(image_link), class: 'button-small' %>
<% end %>
